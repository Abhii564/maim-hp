<!--Tagline-->
<section>
    <div class="container-fluid pt-sm-5">
        <div class="card">
            <div class="card-body">
                <h4 class="pb-2" style="font-size:32px;font-weight:500;">Shaping the future.</h4><hr>
                <p>Breakthrough solutions and trusted brands help deliver precise and reliable measurements. Accelerate your innovation in electronic design, test, manufacturing and optimization.</p>
                <p>Solving complex test and measurement challenges require innovative solutions from a reliable partner.</p>
                <p>Let us help you with benchtop instrumentation or a turnkey solution by industry-leading T&M brands that never compromise on quality and precision.</p>
            </div>
        </div>
    </div>
</section>
<!--Tagline End-->

<!--Section: Brands-->
<section>
    <div class="container-fluid">
        <h3 class="h3 mb-3 text-center" style="padding-top:50px;">Brands</h3><hr>
    </div>
    <div class="container-fluid">
        <div class="row">
            @foreach (var item in Model)
            {

                <div class="col-sm-3 mb-5">
                    <a href="@Url.Content("~/Brands/Details/" + item.Id)">
                        <div class="container">
                            <img src="@Html.Raw(item.ThumbnailTemp)" alt="Avatar" class="image">
                            <div class="overlay">
                                <div class="text">@Html.Raw(item.Name)</div>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</section>